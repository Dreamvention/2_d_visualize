<div id="product-category" class="vz-product_category vz-product_category_opencart">
<h1 class="heading-h1 vz-product_category__heading">{{ heading_title }}</h1>
    <div class="vz-product_category__description">
        {% if thumb or description %}
            <div class="row"> {% if thumb %}
                    <div class="col-sm-2"><img src="{{ thumb }}" alt="{{ heading_title }}" title="{{ heading_title }}" class="img-thumbnail" /></div>
                {% endif %}
                {% if description %}
                    <div class="col-sm-10">{{ description }}</div>
                {% endif %}
            </div>
            <hr>
        {% endif %}
    </div>
    {% include partial.d_product_list.template with  partial.d_product_list %}
    {% if not categories %}
        {% if not products %}
            <p>{{ text_empty }}</p>
            <div class="buttons">
                <div class="pull-right">
                    {% include partial.button.template with partial.button|merge({
                        button: true,
                        id:'button-cart',
                        style:'secondary',
                        text_button:button_cart,
                        title:button_cart,
                    }) %}
                </div>
            </div>
        {% endif %}
    {% endif %}
</div>


