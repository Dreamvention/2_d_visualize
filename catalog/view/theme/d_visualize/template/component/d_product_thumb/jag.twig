<div class="thumb-box">
    <div class="product-thumb">
        <div class="product-thumb_image">
            {% if product.special %}
                {% set priceInt = product.price|replace({"$": ""}) %}
                {% set specialInt = product.special|replace({"$": ""}) %}
                <div class="badge">-{{ 100 - (specialInt|number_format * 100 / priceInt|number_format)|number_format(0) }}%</div>
            {% endif %}
            <div class="add-to-fave">
                <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}"
                        onclick="wishlist.add('{{ product.product_id }}');"><i class="fas fa-heart"></i></button>
            </div>
            <a href="{{ product.href }}"><img src="{{ product.thumb }}"
                                              alt="{{ product.name }}"
                                              title="{{ product.name }}"
                                              class="img-responsive"/></a>
        </div>
        <div class="product-thumb_body">
            <span class="product-name"><a href="{{ product.href }}">{{ product.name|length > 30 ? product.name|slice(0, 30) ~ '...' : product.name  }}</a></span>
            {% if brand %}
                <div class="product_brand">
                    <span class="product_brand_value">{{ brand }}</span>
                </div>
            {% endif %}
            <p class="product-description">{{ product.description }}</p>
            {% if product.price %}
                <div class="product-price-block"> {% if not product.special %}
                        {{ product.price }}
                    {% else %} <span class="product-price product-price_actual">{{ product.special }}</span> <span
                            class="product-price product-price_old">{{ product.price }}</span> {% endif %}
                    {% if product.tax %} <span class="price-tax">{{ text_tax }} {{ product.tax }}</span> {% endif %}
                </div>
            {% endif %}
            <div class="additional-info">

            </div>
            {% include partial.d_rating.template with  partial.d_rating|merge({rating:5}) %}
            <button type="button" class="btn btn-secondary btn-buy btn-block" onclick="cart.add('{{ product.product_id }}', '{{ product.minimum }}');">{{ button_cart }}</button>
        </div>
    </div>
</div>