<div class="vz-product-thumb product-thumb vz-product-thumb_opencart transition">
        <div class="vz-product-thumb__image"><a href="{{ product.href }}"><img src="{{ product.thumb }}"
                                                                               alt="{{ product.name }}"
                                                                               title="{{ product.name }}"
                                                                               class="img-responsive"/></a></div>
        <div class="vz-product-thumb__caption">
            <h4 class="heading-h4"><a href="{{ product.href }}">{{ product.name }}</a></h4>
            <p>{{ product.description }}</p>
            {% if product.rating %}
                {% include partial.rating.template with rating.button|merge({
                    rating:product.rating
                }) %}
            {% endif %}
            {% if product.price %}
                <p class="vz-product-thumb__price">
                    {% if not product.special %}
                        {{ product.price }}
                    {% else %}
                        <span class="price-new">{{ product.special }}</span> <span
                            class="price-old">{{ product.price }}</span>
                    {% endif %}
                    {% if product.tax %}
                        <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                    {% endif %}
                </p>
            {% endif %}
        </div>
        <div class="button-group vz-product-thumb__group">
            {% set spec_btn_text= '<i class="fa fa-shopping-cart"></i>'~
                '<span class="hidden-xs hidden-sm hidden-md">'~ button_cart~'</span>' %}
            {% include partial.button.template with partial.button|merge({
                button:'cart.add('~ product.product_id ~', '~ minimum ~')',
                style:'default',
                classes:'btn-buy vz-product-thumb__button',
                text_button: spec_btn_text
            }) %}
            {% include partial.button.template with partial.button|merge({
                button:'whishlist.add('~ product.product_id ~')',
                style:'default',
                classes:'vz-product-thumb__button',
                icon:'fas fa-heart'
            }) %}
            {% include partial.button.template with partial.button|merge({
                button:'compare.add('~ product.product_id ~')',
                style:'default',
                classes:'vz-product-thumb__button',
                icon:'fas fa-exchange-alt'
            }) %}
        </div>
</div>
