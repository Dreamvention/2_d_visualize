<div class="vz-product-thumb product-thumb vz-product-thumb_hydrus">
    <div class="vz-product-thumb__image">
        {#<span class="vz-product-thumb__image__label">#}
        {#</span>#}
        <a href="{{ product.href }}"><img src="{{ product.thumb }}" alt="{{ product.name }}" title="{{ product.name }}"
                                          class="img-responsive"/></a>
        <div class="vz-product-thumb__buttons btn-group">
            {% include component.button.template with {button:{
                button:'cart.add('~ product.product_id ~', '~ minimum ~')',
                style:'primary',
                classes:'btn-buy vz-product-thumb__button',
                text_button:button_cart
            }} %}
            <div class="divider"></div>
            {% include component.button.template with {button:{
                button:'wishlist.add('~ product.product_id ~')',
                style:'primary',
                classes:'vz-product-thumb__button',
                icon:'fas fa-heart'
            }} %}
            <div class="divider"></div>
            {% include component.button.template with {button:{
                button:'compare.add('~ product.product_id ~')',
                style:'primary',
                classes:'vz-product-thumb__button',
                icon:'fas fa-exchange-alt'
            }} %}
        </div>
    </div>
    <div class="vz-product-thumb__caption">
        <h3 class="heading-h3"><a href="{{ product.href }}">{{ product.name }}</a></h3>
        <div class="vz-product-thumb__description">{{ product.description }}</div>
        <div class="vz-product-thumb__additional_text">Siz XS,M,L</div>
        <div class="vz-product-thumb__group">
                {% if product.price %}
                    <p class="vz-product-thumb__price">
                        {% if not product.special %}
                            {{ product.price }}
                        {% else %}
                            <span class="price-new">{{ product.special }}</span> <span
                                class="price-old">{{ product.price }}</span>
                        {% endif %}
                        {% if product.tax %}
                            <span class="price-tax">{{ text_tax }} {{ product.tax }}</span>
                        {% endif %}
                    </p>
                {% endif %}
                {% if product.rating %}
                    <div class="vz-product-thumb__rating">
                        {% include component.rating.template with rating.button|merge({
                            rating:product.rating
                        }) %}
                    </div>
                {% endif %}
        </div>
    </div>
</div>
