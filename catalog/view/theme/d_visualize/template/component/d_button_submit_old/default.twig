<!-- > d_button_submit_default -->
<div class="vz-button_submit vz-d_button_submit_default">
    <div class="vz-button_submit__back">
        {% if button_back %}
            {% include component.button.template with {button:{
            link: back,
            style:'default',
            classes:'btn-shrink btn-block-sm',
            text_button:button_back,
            }} %}
        {% endif %}
    </div>
    <div class="vz-button_submit__forward">
        {% if text_agree %}
        <div class="vz-button_submit__agree">
            <span>
              {{ text_agree }}
            </span>
                {% include component.input.template with component.input|merge({
                    type:'checkbox',
                    name:'agree',
                    value:'1',
                    checked:agree,
                }) %}
            </div>
        {% endif %}
        {% if continue %}
            {% include component.button.template with {button:{
            link: continue,
            style:'default',
            classes:'btn-block-sm',
            text_button:button_continue,
            }} %}
        {% elseif button_continue %}
            {% include component.input.template with component.input|merge({
            type:'submit',
            value:button_continue,
            button:true,
            style:'primary',
            classes:'btn-shrink btn-block-sm btn-inline'
            }) %}
        {% endif %}
    </div>
</div>
<!-- /> d_button_submit_default -->
