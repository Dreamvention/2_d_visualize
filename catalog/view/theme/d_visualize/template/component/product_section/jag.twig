<div class="product-section">
    <div class="row">
        {% if column_left or column_right %}
            <div class="col-sm-6">
        {% else %}
            <div class="col-sm-12 col-md-6">
        {% endif %}
        {% if thumb or images %}
                    <div class="product-images">
                        {% if thumb %}
                            <a class="thumbnail thumbnail-main" href="{{ popup }}" title="{{ heading_title }}">
                                <img src="{{ thumb }}" title="{{ heading_title }}" alt="{{ heading_title }}"/>
                            </a>
                        {% endif %}
                        {% if images %}
                            <div class="product-images_additional">
                                {% for image in images %}
                                    <a class="thumbnail" href="{{ image.popup }}" title="{{ image.heading_title }}">
                                        <img src="{{ image.thumb }}" title="{{ image.heading_title }}"
                                             alt="{{ image.heading_title }}"/>
                                    </a>
                                {% endfor %}
                            </div>
                        {% endif %}
                    </div>
                {% endif %}
            <div class="col-sm-12 hidden-md hidden-lg product-info">
                {% if price %}
                            <div class="product-price-block">
                                <div class="price-label">Price:</div>
                                {% if not special %}
                                    <span class="product-price product-price_actual">{{ price }}</span>
                                {% else %}
                                    <span class="product-price product-price_old">{{ price }}</span>
                                    <span class="product-price product-price_actual">{{ special }}</span>
                                {% endif %}
                                {% if discounts %}
                                    {% for discount in discounts %}
                                        <li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
                                    {% endfor %}
                                {% endif %}
                            </div>
    {% endif %}
                <div class="form-group">
                    <input type="hidden" name="product_id" value="{{ product_id }}"/>
                    <input type="hidden" name="quantity" value="{{ minimum }}" size="1" id="input-quantity"
                           class="field"/>
                    <button type="button" id="button-cart" data-loading-text="{{ text_loading }}"
                            class="btn btn-primary">{{ button_cart }}</button>
                </div>
                {% if manufacturer %}
                    <table class="product_attributes">
                        <tr>
                            <td class="product_attributes_name">{{ text_manufacturer }}</td>
                            <td class="product_attributes_value">{{ manufacturer }}</td>
                        </tr>
                    </table>
                {% endif %}
                {% if minimum > 1 %}
                    <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
                {% endif %}
                {% if review_status %}
                            <div class="product-rating">
                                {#{% include 'd_visualize/template/partial/d_rating.twig' %}#}
                                <div class="review-link">
                                    <a href="" data-anchor="#reviews" class="link js-anchor">{{ reviews }}</a>
                                    / <a href="" data-anchor="#new-comment" class="link js-anchor">{{ text_write }}</a>
                                </div>
                            </div>
                        {% endif %}
            </div>
        </div>
            <div class="col-sm-6">
             <h1 class="heading-h1">{{ heading_title }}</h1>
                <div id="product" class="product-info hidden-xs hidden-sm">
                {% if review_status %}
                    <div class="product-rating">
                        {% include partial.d_rating.template  with partial.d_rating %}

                        {#<div class="rating" style="cursor: default">#}
                            {#{% for i in 1..5 %}#}
                                {#{% if rating < i %}<span class="fa-stack"><i#}
                                            {#class="fas empty fa-star"></i></span>{% else %}<span#}
                                        {#class="fa-stack"><i class="fas fa-star"></i><i#}
                                            {#class="fas empty fa-star"></i></span>{% endif %}#}
                            {#{% endfor %}#}
                        {#</div>#}
                        <div class="review-link">
                            <a href="" data-anchor="#reviews" class="link js-anchor">{{ reviews }}</a>
                        </div>
                    </div>
                {% endif %}
                <span>{{ text_model }} {{ model }}</span>
                {% if attribute_groups %}
                    <div class="attributes-group">
                        {% for attribute_group in attribute_groups %}
                            {% for attribute in attribute_group.attribute %}
                                <div class="attribute">
                                    <span>{{ attribute.name }}: </span>
                                    <span>{{ attribute.text }}</span>
                                </div>
                            {% endfor %}
                        {% endfor %}
                    </div>
                {% endif %}
                {% if manufacturer %}
                    <div class="product_brand">
                        <span class="product_brand_value">{{ manufacturer }}</span>
                    </div>
                {% endif %}
                {% if price %}
                    <div class="product-price-block">
                        {% if not special %}
                            <span class="product-price product-price_actual like-heading-h1 bold">{{ price }}</span>
                        {% else %}
                            <span class="product-price product-price_actual like-heading-h1 bold">{{ special }}</span>
                            <span class="product-price product-price_old like-heading-h1 bold">{{ price }}</span>
                        {% endif %}
                    </div>
                    {% if discounts %}
                        <ul class="discount">
                            {% for discount in discounts %}
                                <li>{{ discount.quantity }}{{ text_discount }}{{ discount.price }}</li>
                            {% endfor %}
                        </ul>
                    {% endif %}
                {% endif %}
                {# *** OPTIONS *** #}
                {% include components.options.template %}
                {# *** END OPTIONS *** #}
                <h3>{{ entry_qty }}</h3>
                <div class="form-group">
                    <input type="hidden" name="product_id" value="{{ product_id }}"/>
                    <div class="product-quantity">
                        <div data-prop="decrement" class="quantity-control decrement"><i
                                    class="fal fa-minus"></i></div>
                        <input type="number" name="quantity" value="{{ minimum }}" size="1" id="input-quantity"
                               class="field quantity-control"/>
                        <div data-prop="increment" class="quantity-control increment"><i
                                    class="fal fa-plus"></i></div>
                    </div>

                    <div class="d-flex align-items-center ">
                        <button type="button" id="button-cart" data-loading-text="{{ text_loading }}"
                                class="btn btn-secondary">{{ button_cart }}</button>
                        <div class="wish" onclick="wishlist.add('{{ product.product_id }}');">
                            <div class="add-to-fave">
                                <button type="button" data-toggle="tooltip" title="{{ button_wishlist }}">
                                    <i class="fas fa-heart"></i></button>
                            </div>
                            <span>{{ button_wishlist }}</span>
                        </div>
                    </div>

                </div>
                {% if minimum > 1 %}
                        <div class="alert alert-info"><i class="fa fa-info-circle"></i> {{ text_minimum }}</div>
                    {% endif %}
                </div>
                <link rel="stylesheet" href="">
            </div>
            {% if tags %}
                <p>{{ text_tags }}
                    {% for tag in tags %}
                        <a href="{{ tag.href }}">{{ tag.tag }}</a>
                    {% endfor %}
                </p>
            {% endif %}
            </div>
        </div>
    <div class="row">
        <div class="col-12 col-sm-6">
            {% include partial.d_review.template with partial.d_review %}
        </div>
    </div>
</div>
{% if products %}
    <h1 class="heading-h1 text-center">{{ text_related }}</h1>
    <div class="row products-list">
    {% for product in products %}
        <div class="product-layout product-grid col-sm-3 col-xs-6">
            {% include partial.d_product_thumb.template with partial.d_product_thumb %}

        </div>
    {% endfor %}
    </div>
{% endif %}
<script type="text/javascript"><!--
    $(document).ready(function () {
        Product.init({
            product_id: '{{ product_id }}',
            $quantity: $('#input-quantity'),
            minimum: '{{ minimum }}'
        });

        $('.js-anchor').click(function (e) {
            e.preventDefault();
            var moveTo = $(this).data('anchor');

            $('html, body').animate({
                scrollTop: $(moveTo).offset().top
            }, 500);
        });
    });
    //-->
</script>
