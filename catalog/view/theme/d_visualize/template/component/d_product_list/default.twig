<div class="vz-d_product_list vz-d_product_list_default">
    {% if products %}
        {% include component.d_product_sort.template with component.d_product_sort %}
        <div class="row products-list">
            {% for product in products %}
                <div class="product-layout product-list col-12">
                    {% include component.d_product_thumb.template with component.d_product_thumb|merge(product) %}
                </div>
            {% endfor %}
        </div>
        <div class="row">
            <div class="col-sm-6 text-center-lg text-right">{{ pagination }}</div>
            <div class="col-sm-6 text-right">{{ results }}</div>
        </div>
    {% else %}
        <p>{{ text_empty }}</p>
        {% include component.d_button_continue.template with component.d_button_continue %}
    {% endif %}
</div>
