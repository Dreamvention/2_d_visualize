    "font": {
      "navigation": {
        "text": "editor.entry_font",
        "icon": "fas fa-font"
      },
      "variables": {
        "size-base": {
          "text": "font.size_base",
          "type": "slider",
          "min": "8",
          "max": "16",
          "step": "1",
          "suffix": "px"

        },
        "line-height": {
          "text": "font.line_height",
          "type": "slider",
          "min": "1",
          "max": "2",
          "step": ".1"
        },
        "family": {
          "type": "font-family",
          "text": "font.family"
        },
        "headings-family": {
          "type": "font-family",
          "text": "font.headings_family"
        },
        "headings-size-base": {
          "text": "font.headings_size_base",
          "type": "slider",
          "min": "12",
          "max": "20",
          "step": "1",
          "suffix": "px"
        },
        "headings-line-height": {
          "text": "font.headings_line_height",
          "type": "slider",
          "min": "1",
          "max": "2",
          "step": ".1"
        },
        "headings-letter-spacing": {
          "text": "font.headings_letter_spacing",
          "type": "slider",
          "min": "-1",
          "max": "15",
          "step": "1",
          "suffix": "px"
        },
        "headings-text-transform": {
          "text": "font.headings_text_transform",
          "type": "toggle",
          "values": [
            {
              "icon": "format_bold",
              "text": "font.bold",
              "value": "bold"
            },
            {
              "icon": "format_italic",
              "text": "font.italic",
              "value": "italic"
            },
            {
              "icon": "format_underlined",
              "text": "font.underline",
              "value": "underline"
            },
            {
              "icon": "text_fields",
              "text": "font.capitalize",
              "value": "capitalize"
            },
            {
              "icon": "title",
