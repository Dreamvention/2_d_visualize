{
  "color": {
    "text-primary": "white",
    "primary": "#229ac8",
    "header-top-text": "#888",
    "header-top": "#eeeeee",
    "footer": "#303030",
    "footer-text": "#e2e2e2",
    "text-body": "#666",
    "heading": "#444",
    "link": "#23a1d1"
  },
  "button": {
    "radius": "5px",
    "font-size": "12px",
    "border-width": "1px",
    "text-transform": [],
    "box-shadow": true
  },
  "font":{
    "size-base": "12px",
    "family": "Open Sans",
    "line-height": "1.6",
    "headings-family": "Open Sans",
    "headings-size-base": "12px",
    "headings-line-height": "1.1",
    "headings-letter-spacing": "1px",
    "headings-text-transform": []
  },
  "forms": {"font-size": "12px","radius": "0px","color": "primary" },
  "breakpoints": "('phone': 320px,'phone-wide': 480px,'phablet': 560px,'tablet-small': 640px,'tablet': 769px,'tablet-wide': 991px,'laptop': 1199px,'desktop': 1248px,'desktop-wide': 1440px)",
  "layout": {
    "container-width": "980"
  },
  "z-indexes": "('alert', 'modal','menu', 'product-thumb', 'site-header','loader','backdrop', 'page-wrapper', 'site-footer', 'mobile-menu-button', 'select-arrow','main-wrapper','modal-backdrop',)",
